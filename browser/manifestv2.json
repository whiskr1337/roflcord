{
    "manifest_version": 2,
    "minimum_chrome_version": "91",

    "name": "Roflcord Web",
    "description": "The cutest Discord mod now in your browser",
    "author": "Vendicated",
    "homepage_url": "https://github.com/Vendicated/Roflcord",
    "icons": {
        "128": "icon.png"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["dist/Roflcord.js"],
            "all_frames": true,
            "world": "MAIN"
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources": ["dist/Roflcord.js", "dist/Roflcord.css"],

    "browser_specific_settings": {
        "gecko": {
            "id": "roflcord-firefox@vendicated.dev",
            "strict_min_version": "128.0"
        }
    }
}
